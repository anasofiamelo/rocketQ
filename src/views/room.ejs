<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/room.css">
    <link rel="stylesheet" href="/styles/modal.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <title> Perguntas e Respostas </title>
</head>

    <body>

        <div id="room" class="container">
            <header> 
                <a href="#">
                <a href="/" class="logo">  <img src="/images/logo.svg"> </a>
                </a>
                    <div class="buttons" id="room-id" data-id="<%= roomId %>">
                        <div class="button outlined">
                            #<%= roomId %>
                            <i class="far fa-clone"></i> 
                        </div>

                        <a href="/create-pass">
                            <button>
                                <i class="fas fa-user-friends"></i>
                                Criar sala
                            </button>
                        </a>
                        
                </div>
            </header>

            <main>

                <section id="question-form">
                    <h2> Faça sua pergunta </h2>

                    <form action="/question/create/<%= roomId %>" method="POST">
                        <label for-id="question" class="sr-only">O que você quer perguntar?</label>
                        <textarea id="question" name="question" placeholder="O que você quer perguntar?"></textarea>
                        <footer>
                            <div>
                                <i class="fas fa-lock"></i>
                                Esta pergunta é anônima
                            </div>
                            <button>Enviar</button>
                        </footer>
                    </form>
                </section>

                <section id="questions">
                    <h2 class="sr-only"> Perguntas da comunidade </h2>
                    <div class="questions">

                        <% questions.forEach(question => { %>
                            
                            <div class="question-wrapper">
                                <div class="question-content">
                                    <div class="user">
                                        <i class="fas fa-user-circle"></i>
                                    </div>
                                    <div class="question">
                                        <p> <%= question.title %> </p>
                                    </div>
                                </div>
    
                                <div class="actions">
    
                                    <a class="check" href="" data-id="<%=question.id%>">
                                        <i class="fas fa-check"></i>
                                        Marcar como lida 
                                    </a>
    
                                    <a class="delete" href="" data-id="<%=question.id%>"> 
                                        <i class="fas fa-trash"></i>
                                        Excluir 
                                    </a>
    
                                </div>
    
                            </div>

                        <% }) %>

                        <% questionsRead.forEach(questionRead => { %>
                        <div class="question-wrapper read">
                            <div class="question-content">
                                <div class="user">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div class="question">
                                    <p> <%= questionRead.title %> </p>
                                </div>
                            </div>
                            <div class="actions">
                                <a class="delete" href="" data-id="<%=questionRead.id%>"> 
                                    <i class="fas fa-trash"></i>
                                    Excluir 
                                </a>

                            </div>
                        </div>
                        <% }); %>


                    </div>
                </section>

                
            </main>
        </div>

        <!-- Modal -->
        <div class="modal-wrapper">
            <div class="modal">
                <h2> </h2>
                <p> Tem certeza que você deseja excluir essa pergunta? </p>

                <form action="#" method="POST">
                    <div class="input">
                        <label class="sr-only" for-id="password"></label>
                        <input type="password" id="password" name="password" placeholder="Digite sua senha">
                    </div>  

                    <div class="buttons">
                        <div class="button grey cancel"> Cancelar </div>
                        <button class="red"> Sim, excluir</button>
                    </div>

                </form>

            </div>
        </div>
        <script src="/scripts/main.js" defer type="module"> </script>
    </body> 



</html>